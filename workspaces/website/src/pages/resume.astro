---

import SiteWide from '~layouts/SiteWide.astro';
import Resume from "../components/resume/index";

import { getResume } from "../utils/airtable";

const content = await getResume();
const pageTitle = `Resume for Scott Nath - ${content.basics.short_summary}`;
---
<SiteWide title={pageTitle} description={content.basics.summary}>
  <div class="readable">
    <ul class="actions">
      <li><button onclick="window.print();">üñ®Ô∏è print</button></li>
    </ul>
  </div>
	<Resume
		title={content.basics.title}
		subtitle={content.basics.subtitle}
		summary={content.basics.summary}
		email={content.basics.email}
		phone={content.basics.phone}
		website={content.basics.website}
		skillsets={content.skillsets}
		jobs={content.positions}
		projects={content.projects}
	/>

</SiteWide>
<style>
  .readable:has(.actions) {
    margin-bottom: 0;
  }
</style>